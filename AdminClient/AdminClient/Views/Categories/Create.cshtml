@model AdminClient.Models.Category

@{
    ViewBag.Title = "Create";
}

@section css{
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
}
<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Widgets</h4>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">

                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Category</li>

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <h2>Create</h2>
            <hr>
            <h4>Category</h4>
            <div class="col-md-8 m-auto">
                <div class="card">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="card-body">

                        <div class="form-group row pt-4">
                            <label class="col-sm-4 text-end control-label col-form-label">Name</label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @Value = "", @Placeholder = "Please enter name" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="border-top text-center m-l-10"  >
                            <div class="card-body">
                                <button type="button" id="save-category" class="btn btn-primary">Submit</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Js/Category")
}
